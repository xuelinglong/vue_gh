    @import "../../common/css/mixin.styl"

.list
    display: flex
    flex-direction: column
    width: 100%
    height: 100%
    background: #f0f0f0
    .article-item
        flex: 1
        width: 100%
        line-height: 60px
        taxt-align: left           
        border-bottom: 1px solid #AAAAAA
        .title
            line-height: 40px
            margin-left: 12px
            color: #d94064
            & > a
                display: block
                text-decoration: none
                color: #d94064
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap
                .author
                    line-height: 20px
                    font-size: 8px
                    color: #AAAAAA
                    text-align: right
                    margin-right: 12px      