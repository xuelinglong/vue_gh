    @import "../../common/css/mixin.styl"

    .article
        display: flex
        flex-direction: column
        color: #d94064
        width: 100%
        height: 100%
        .article-item
            flex: 1
            line-height: 60px
            taxt-align: left           
            border-bottom: 1px solid #AAAAAA
            .title
                line-height: 40px
                margin-left: 12px
                & > a
                    display: block
                    text-decoration: none;
                    color: #d94064

    .author
        line-height: 20px
        font-size: 8px
        color: #AAAAAA
        text-align: right
        margin-right: 12px       